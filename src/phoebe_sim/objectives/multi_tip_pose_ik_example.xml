<?xml version="1.0" encoding="UTF-8" ?>
<root BTCPP_format="4" main_tree_to_execute="Multi-tip Pose IK Example">
  <!--//////////-->
  <BehaviorTree ID="Multi-tip Pose IK Example" _description="" _favorite="true">
    <Control ID="Sequence" name="TopLevelSequence">
      <SubTree
        ID="Move to Waypoint"
        _collapsed="true"
        acceleration_scale_factor="1.0"
        controller_action_server="/joint_trajectory_controller/follow_joint_trajectory"
        controller_names="joint_trajectory_controller"
        joint_group_name="manipulator"
        keep_orientation="false"
        keep_orientation_tolerance="0.05"
        link_padding="0.01"
        velocity_scale_factor="1.0"
        waypoint_name="StartAway"
        seed="0"
      />
      <!--Create the target poses into a vector-->
      <Action
        ID="CreateStampedPose"
        reference_frame="world"
        stamped_pose="{target}"
        position_xyz="0.2;0.0;0.85"
        orientation_xyzw="0.5;0.5;0.5;0.5"
      />
      <Action
        ID="CreateStampedPose"
        stamped_pose="{target}"
        orientation_xyzw="0;0;0;1"
        reference_frame="left_grasp_link"
        position_xyz="0.2;0;0"
        _skipIf="true"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="target"
        marker_size="0.100000"
        pose="{target}"
      />
      <Action
        ID="BreakpointSubscriber"
        breakpoint_topic="/moveit_pro_breakpoint"
      />
      <Action
        ID="TransformPose"
        input_pose="{target}"
        output_pose="{target_pose_1}"
        quaternion_xyzw="0;0;0;1"
        translation_xyz="0;-0.2;0"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="target_pose_1"
        marker_size="0.100000"
        pose="{target_pose_1}"
      />
      <Action
        ID="BreakpointSubscriber"
        breakpoint_topic="/moveit_pro_breakpoint"
      />
      <Action
        ID="AddPoseStampedToVector"
        input="{target_pose_1}"
        vector="{target_poses}"
      />
      <Action
        ID="TransformPose"
        input_pose="{target}"
        output_pose="{target_pose_2}"
        quaternion_xyzw="0;0;0;1"
        translation_xyz="0;0.2;0"
      />
      <Action
        ID="VisualizePose"
        marker_lifetime="0.000000"
        marker_name="target_pose_2"
        marker_size="0.100000"
        pose="{target_pose_2}"
      />
      <Action
        ID="BreakpointSubscriber"
        breakpoint_topic="/moveit_pro_breakpoint"
      />
      <Action
        ID="AddPoseStampedToVector"
        input="{target_pose_2}"
        vector="{target_poses}"
      />
      <!--Compute
      IK simultaneously for two tips-->
      <Action
        ID="GetCurrentPlanningScene"
        planning_scene_msg="{planning_scene}"
      />
      <Action
        ID="ComputeInverseKinematics"
        ik_timeout_s="0.01"
        planning_group_name="arms_lift_only"
        planning_scene_msg="{planning_scene}"
        target_poses="{target_poses}"
        tip_links="right_grasp_link;left_grasp_link"
        solution="{solution}"
        link_padding="0.00"
      />
      <!--Move
      to the computed solution-->
      <SubTree
        ID="Move to Joint State"
        _collapsed="false"
        acceleration_scale_factor="1.0"
        controller_action_server="/joint_trajectory_controller/follow_joint_trajectory"
        controller_names="joint_trajectory_controller"
        joint_group_name="arms_lift_only"
        keep_orientation="false"
        keep_orientation_tolerance="0.05"
        link_padding="0.00"
        target_joint_state="{solution}"
        velocity_scale_factor="1.0"
        seed="0"
      />
    </Control>
  </BehaviorTree>
  <TreeNodesModel>
    <SubTree ID="Multi-tip Pose IK Example">
      <MetadataFields>
        <Metadata subcategory="Application - Advanced Examples" />
        <Metadata runnable="true" />
      </MetadataFields>
    </SubTree>
  </TreeNodesModel>
</root>
